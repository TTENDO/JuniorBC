          .site-section.bg-light#contact-section
               .container
                    .row.justify-content-center.text-center
                    .col-7.text-center.mb-5
                         h2 Get In Touch Using The Contact Form
                         p Please fill in the following details
                         
                    .row
                              .col-lg-8.mb-5
                                   form(action="#" method="post")
                                        .form-group.row
                                             .col-md-6.mb-4.mb-lg-0
                                                  input.form-control(type="text" placeholder="Enter firstname" name="fname" id="fname" required)
                                             .col-md-6
                                                  input.form-control(type="text" placeholder="Enter lastname" name="lname" id="lname" required)
                                        
                                        .form-group.row
                                             .col-md-6.mb-4.mb-lg-0
                                                  input.form-control(type="email" placeholder="Enter email Address" name="email" id="email" required)
                                             .col-md-6
                                                  input.form-control(type="text" placeholder="Enter phone number" name="phone" id="phone" required)
                                        
                                        .form-group.row
                                             .col-md-12
                                                  textarea.form-control(name="message" id="message" placeholder="Write a brief description about what you want to tell us" cols="30" rows="10")

                                        .form-group.row
                                             .col-md-6.mr-auto
                                                  input.btn.btn-block.btn-primary.text-white.py-3.px-5(type="submit" value="Send message")
                              
                              .col-lg-4.ml-auto
                                   .bg-white.p-3.p-md-5
